    <div class="container">
        <div class="profile-header">
            <div class="profile-picture" >
                <!-- Arka plan rengini mavi yap -->
                <!-- Profil fotoğrafını PicturePath'ten alın -->
                 @* <img src="~/wwroot/img/@Model.ProfilePicture" > *@
                <img src="~/img/@Model.ProfilePicture" class="profile-image" width="150px" height="150px">


            </div>
            <div class="profile-info text-center">
                <h1>@Model.FirstName @Model.LastName</h1>
                <p>@Model.About</p>
            </div>
        </div>

        <div class="articles">
            <h2>Yazdığı Makaleler</h2>
            @foreach (var article in Model.Articles.OrderByDescending(a => a.CreatedDate))
            {
                <div class="article-item">
                    <h2>@article.Title</h2>
                    <p>@article.Content</p>
                    <p class="date">Yayınlanma Tarihi: @article.CreatedDate.ToString("dd MMMM yyyy")</p>
                </div>
            }
        </div>

        <!-- Güncelle butonunu ekleyin -->
        <div class="edit-button">
            <a href="@Url.Action("Edit", "User")" class="btn btn-warning">Bilgileri Güncelle</a>
        </div>
    </div>

</body>
