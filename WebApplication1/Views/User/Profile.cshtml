    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }

        .profile-picture {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            margin-right: 20px;
        }

        .profile-info {
            flex-grow: 1;
        }

            .profile-info h1 {
                margin: 0;
                color: #333;
                font-size: 2.5em;
            }

            .profile-info p {
                margin: 10px 0;
                color: #555;
                font-size: 1.2em;
                flex-grow: 1;
                text-align: center; /* İçeriği yatayda ortala */
                margin: 0 auto; /* Dikeyde ortalamak için */
            }

        .articles {
            margin-top: 40px;
        }

        .article-item {
            margin-bottom: 40px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fafafa;
        }

            .article-item h2 {
                margin: 0 0 10px;
                font-size: 1.8em;
                color: #ff9f1a;
            }

            .article-item p {
                margin: 10px 0;
                color: #555;
                font-size: 1.2em;
            }

            .article-item .date {
                font-size: 1em;
                color: #888;
                margin-top: 15px;
            }

        .edit-button {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>

