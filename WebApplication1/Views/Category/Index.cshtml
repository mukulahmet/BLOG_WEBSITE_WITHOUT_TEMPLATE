@model List<WebApplication1.Models.Entities.Category>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategoriye Göre Makaleler</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .category {
            margin-bottom: 40px;
        }

            .category h2 {
                color: #ff9f1a;
                margin-bottom: 20px;
            }

        .article-list {
            list-style: none;
            padding: 0;
        }

        .article-item {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fafafa;
        }

            .article-item h3 {
                margin: 0 0 10px;
                font-size: 1.2em;
                color: #ff9f1a;
            }

            .article-item p {
                margin: 0;
                color: #555;
            }

            .article-item .author {
                font-size: 0.9em;
                color: #555;
                margin-top: 10px;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Kategoriye Göre Makaleler</h1>

        @foreach (var category in Model)
        {
            <div class="category">
                <h2>@category.CategoryName</h2>
                <ul class="article-list">
                    @foreach (var articleCategory in category.ArticleCategories)
                    {
                        var article = articleCategory.Article;
                        <li class="article-item">
                            <h3>@article.Title</h3>
                            <p>@article.Content</p>
                            <p class="author">
                                Yazar: @article.User?.UserName
                            </p>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>

</body>
</html>
